class Solution {
public:
    int searchInsert(vector<int>& vec, int x) {
        if(vec.size() == 0)
        return 0;

        int l = 0;
        int r = vec.size()-1;
        int mid;
        while(l < r){
            mid = l + (r-l)/2;

            if(vec[mid] == x)
                return mid;
            else if(x > vec[mid])
                l = mid+1;
            else
                r = mid-1;
        }
        if(vec[l] < x)
            return l+1;
        return l;
    }
};
